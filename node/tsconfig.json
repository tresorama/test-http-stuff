{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "checkJs": true
  },
  "include": [
    "src/**/*.ts",
    "vitest.*"
  ],
  "exclude": [
    "node_modules"
  ]
}